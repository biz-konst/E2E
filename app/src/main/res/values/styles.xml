    <!--  auth sign  -->
    <style name="Widget.Auth.Sign.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/control_vertical_margin</item>
        <item name="helperTextEnabled">true</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="Widget.Auth.Sign.TextInputLayout.Nickname">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Auth.TextInputEditText.Nickname</item>
        <item name="startIconDrawable">@drawable/ic_auth_nickname_24</item>
        <item name="endIconMode">dropdown_menu</item>
    </style>

    <style name="Widget.Auth.Sign.TextInputLayout.Password">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Auth.TextInputEditText.Password</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="startIconDrawable">@drawable/ic_auth_password_24</item>
    </style>

    <style name="Widget.Auth.Sign.TextInputEditText.Nickname" parent="Widget.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="Widget.Auth.Sign.TextInputEditText.Password" parent="Widget.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="Widget.Auth.Sign.Button.SignIn" parent="Widget.Material3.Button" />

